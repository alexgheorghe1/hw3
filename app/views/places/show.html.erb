
<h1 style="font-family:verdana;"> <%= @place.name %> </h1>
<br>

<ul>

<% for post in @place.posts %>
    <p> <h2> <%= post.title %> </h2> </p>
    <p style="font-family:courier;"> <small> <i> <%= post.posted_on %> </i> </small> </p>
    <p> <%= post.description %> </p>
    <br>
<% end %>
</ul>


<p>
    <a href="/posts/new?place_id=<%= @place.id %>">New post</a>
</p>

<p>
<a href="/places">Back to places I've been</a>
</p>

<p>
<%= button_to "Delete place", @place, method: :delete %>
</p>
